#:import NoTransition kivy.uix.screenmanager.NoTransition

<Label>
    size_hint: 0.1,0.1
    font_size:17
    color: 0,0,0,1
<ProgressBar>
    min:0
    max:100
<Button>
    size_hint:0.26,0.1

ScreenManager:
    transition: NoTransition()
    id: screen_manager


    MainPage:
        name: 'mainpage'
        id: main
        box: box
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos:self.pos
                size:self.size

        FloatLayout:
            Label:
                text: "URL:"
                font_size: 19
                pos_hint: {"x": 0.2, "y": 0.775}
            TextInput:
                id: box
                text: ""
                multiline: False
                size_hint: 0.5,0.05
                pos_hint: {"x": 0.3, "y": 0.8}
            Button:
                text:"Enter"
                size_hint: 0.1,0.06
                pos_hint: {"x": 0.82, "y": 0.795}
                on_release:
                    main.tcp()

            Button:
                text:"LED1"
                size_hint: 0.4,0.4
                pos_hint: {"x": 0.05, "y": 0.2}
                on_release:
                    main.test1()
            Button:
                text:"LED2"
                size_hint: 0.4,0.4
                pos_hint: {"x": 0.55, "y": 0.2}
                on_release:
                    main.test2()


